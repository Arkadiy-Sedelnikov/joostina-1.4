<?xml version="1.0" encoding="utf-8"?>
<mosinstall type="component" version="1.0.0">
	<name>Объекты контакта</name>
	<author>Joostina! Project</author>
	<copyright>(C) 2008-2010 Joostina team.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.htm GNU/GPL</license>
	<authorEmail>joostinacms@gmail.com</authorEmail>
	<authorUrl>www.joostina.ru</authorUrl>
	<version>1.0.0</version>
	<description>Параметры контактной информации</description>
	<params>
		<param name="menu_image" type="imagelist" directory="/images/stories" hide_default="1" default="" label="Изображение меню" description="Маленькое изображение, располагаемое слева или справа от пункта меню. Изображение должно находиться в папке images/stories/" />
		<param name="pageclass_sfx" type="text" size="20" default="" label="Суффикс CSS-класса страницы" description="Суффикс CSS-класса, используемого на этой странице. Необходим для использования индивидуального стиля страницы" />
		<param name="print" type="list" default="" label="Значок Печать" description="Показать/Скрыть кнопку печати объекта. Применяется только для этой страницы">
			<option value="">Использовать глобальные</option>
			<option value="0">Скрыть</option>
			<option value="1">Показать</option>
		</param>
		<param name="back_button" type="list" default="" label="Кнопка Назад (Вернуться)" description="Показать/Скрыть кнопку Назад (Вернуться), возвращающую на предыдущую просмотренную страницу">
			<option value="">Использовать глобальные</option>
			<option value="0">Скрыть</option>
			<option value="1">Показать</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="name" type="radio" default="1" label="Имя" description="Показать/Скрыть информацию об имени">
			<option value="0">Скрыть</option>
			<option value="1">Показать</option>
		</param>
		<param name="position" type="radio" default="1" label="Положение" description="Показать/Скрыть информацию о положении (должности)">
			<option value="0">Скрыть</option>
			<option value="1">Показать</option>
		</param>
		<param name="email" type="radio" default="0" label="E-mail" description="Показать/Скрыть e-mail контакта. Если вы выбрали Показывать адрес, то включите защиту email от спамботов">
			<option value="0">Скрыть</option>
			<option value="1">Показать</option>
		</param>
		<param name="street_address" type="radio" default="1" label="Адрес" description="Показать/Скрыть информацию об адресе">
			<option value="0">Скрыть</option>
			<option value="1">Показать</option>
		</param>
		<param name="suburb" type="radio" default="1" label="Город/Пригород" description="Показать/Скрыть информацию о пригороде">
			<option value="0">Скрыть</option>
			<option value="1">Показать</option>
		</param>
		<param name="state" type="radio" default="1" label="Край/Область/Республика" description="Показать/Скрыть информацию о Крае/Области/Республике">
			<option value="0">Скрыть</option>
			<option value="1">Показать</option>
		</param>
		<param name="country" type="radio" default="1" label="Страна" description="Показать/Скрыть информацию о стране">
			<option value="0">Скрыть</option>
			<option value="1">Показать</option>
		</param>
		<param name="postcode" type="radio" default="1" label="Почта/Почтовый индекс" description="Показать/Скрыть информацию о почтовом индексе">
			<option value="0">Скрыть</option>
			<option value="1">Показать</option>
		</param>
		<param name="telephone" type="radio" default="1" label="Телефон" description="Показать/Скрыть информацию о телефоне">
			<option value="0">Скрыть</option>
			<option value="1">Показать</option>
		</param>
		<param name="fax" type="radio" default="1" label="Факс" description="Показать/Скрыть информацию о факсе">
			<option value="0">Скрыть</option>
			<option value="1">Показать</option>
		</param>
		<param name="misc" type="radio" default="1" label="Прочая информация" description="Показать/Скрыть дополнительную информацию">
			<option value="0">Скрыть</option>
			<option value="1">Показать</option>
		</param>
		<param name="image" type="radio" default="1" label="Изображение" description="Показать/Скрыть изображение">
			<option value="0">Скрыть</option>
			<option value="1">Показать</option>
		</param>
		<param name="vcard" type="radio" default="0" label="VCard" description="Показать/Скрыть возможность скачивания VCard">
			<option value="0">Скрыть</option>
			<option value="1">Показать</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="email_description" type="radio" default="1" label="Описание E-mail" description="Показать/Скрыть внизу текст описания">
			<option value="0">Скрыть</option>
			<option value="1">Показать</option>
		</param>
		<param name="email_description_text" type="text" size="30" default="" label="Текст описания" description="Текст описания для формы отправки E-mail. Если оставлено пустым, то будет использоваться константа _EMAIL_DESCRIPTION из языкового файла" />
		<param name="email_form" type="radio" default="1" label="Форма E-mail" description="Показать/Скрыть форму отправки e-mail">
			<option value="0">Скрыть</option>
			<option value="1">Показать</option>
		</param>
		<param name="email_copy" type="radio" default="0" label="Копия E-mail" description="Показать/Скрыть переключатель отправки копии email на адрес отправителя">
			<option value="0">Скрыть</option>
			<option value="1">Показать</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="drop_down" type="radio" default="0" label="Раскрывающийся список" description="Показать/Скрыть раскрывающийся список для выбора просматриваемого контакта">
			<option value="0">Скрыть</option>
			<option value="1">Показать</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="contact_icons" type="list" default="0" label="Значки/текст" description="Использовать значки, текст или отображать только текст с контактной информацией">
			<option value="0">Значки</option>
			<option value="1">Текст</option>
			<option value="2">Ничего</option>
		</param>
		<param name="icon_address" type="imagelist" directory="/images/M_images" hide_none="1" default="" label="Значок адреса" description="Значок для адресной информации" />
		<param name="icon_email" type="imagelist" directory="/images/M_images" hide_none="1" default="" label="Значок E-mail" description="Значок для информации о E-mail" />
		<param name="icon_telephone" type="imagelist" directory="/images/M_images" hide_none="1" default="" label="Значок телефона" description="Значок для информации о телефоне" />
		<param name="icon_fax" type="imagelist" directory="/images/M_images" hide_none="1" default="" label="Значок факса" description="Значок для информации о факсе" />
		<param name="icon_misc" type="imagelist" directory="/images/M_images" hide_none="1" default="" label="Значок прочего" description="Значок для прочей информации" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="robots" type="list" default="-1" label="Мета-тег Robots" description="Выберите, какой мета-тег robots использовать для этой страницы">
			<option value="-1">Не отображать мета-тег robot</option>
			<option value="0">Index, follow</option>
			<option value="1">Index, NoFollow</option>
			<option value="2">NoIndex, Follow</option>
			<option value="3">NoIndex, NoFollow</option>
		</param>
		<param name="meta_description" type="textarea" default="" label="META-тег description" rows="5" cols="30" description="META-тег: Description"/>
		<param name="meta_keywords"    type="textarea" default="" label="META-тег keywords" rows="5" cols="30" description="META-тег keywords. Разделяйте ключевые слова запятыми"/>
		<param name="meta_author" 	   type="text" size="40" default="" label="META-тег author" description="Введите МЕТА-тег author. Оставьте это поле пустым, если не хотите отображать этот тег в заголовке страницы" />
	</params>
</mosinstall>