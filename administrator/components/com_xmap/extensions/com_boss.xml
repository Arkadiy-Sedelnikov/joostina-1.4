<?xml version="1.0" encoding="utf-8"?>
<mosinstall type="xmap_ext" version="1.0.0">
    <name>XMAP plugin for JoiBOSS</name>
    <author>Arkadiy</author>
    <creationDate>February 2011</creationDate>
    <copyright>GNU GPL</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>admin@joostina.ru</authorEmail>
    <authorUrl>www.joostina.ru</authorUrl>
    <version>1.0</version>
    <description>XMAP plugin for JoiBOSS</description>
    <files>
        <filename xmap_ext="com_boss">com_boss.php</filename>
    </files>

    <params>
        <param name="include_entries" type="list" default="1" label="Показывать контент" description="Должны ли мы включать контент в карту сайта?">
            <option value="0">Нигде</option>
            <option value="1">Везде</option>
            <option value="2">Только в XML карту</option>
            <option value="3">Только в карту сайта</option>
        </param>
        <param name="max_entries" type="text" default="" label="Макс. записей" description="Максимальное количество записей на категорию, чтобы включить в карту сайта (Оставьте поле пустым чтобы снять ограничения)"/>
        <param name="@spacer" type="spacer" default="" label="XML карта сайта" description="Настройки только для XML карты сайта"/>
        <param name="priority" type="list" default="0.5" label="Приоритет категорий" description="Приоритет категорий">
            <option value="-1">Применить настройки родительского меню</option>
            <option value="0.0">0.0</option>
            <option value="0.1">0.1</option>
            <option value="0.2">0.2</option>
            <option value="0.3">0.3</option>
            <option value="0.4">0.4</option>
            <option value="0.5">0.5</option>
            <option value="0.6">0.6</option>
            <option value="0.7">0.7</option>
            <option value="0.8">0.8</option>
            <option value="0.9">0.9</option>
            <option value="1">1</option>
        </param>
        <param name="changefreq" type="list" default="weekly" label="Частота изменения категорий" description="Установите частоту изменения для категорий">
            <option value="-1">Применить настройки родительского меню</option>
            <option value="always">Всегда</option>
            <option value="hourly">Ежечасно</option>
            <option value="daily">Ежедневно</option>
            <option value="weekly">Еженедельно</option>
            <option value="monthly">Ежемесячно</option>
            <option value="yearly">Ежегодно</option>
            <option value="never">Никогда</option>
        </param>
        <param name="entry_priority" type="list" default="0.5" label="Приоритет контента" description="Приоритет контента">
            <option value="-1">Применить настройки родительского меню</option>
            <option value="0.0">0.0</option>
            <option value="0.1">0.1</option>
            <option value="0.2">0.2</option>
            <option value="0.3">0.3</option>
            <option value="0.4">0.4</option>
            <option value="0.5">0.5</option>
            <option value="0.6">0.6</option>
            <option value="0.7">0.7</option>
            <option value="0.8">0.8</option>
            <option value="0.9">0.9</option>
            <option value="1">1</option>
        </param>
        <param name="entry_changefreq" type="list" default="weekly" label="Частота изменения контента" description="Установите частоту изменения для контента">
            <option value="-1">Применить настройки родительского меню</option>
            <option value="always">Всегда</option>
            <option value="hourly">Ежечасно</option>
            <option value="daily">Ежедневно</option>
            <option value="weekly">Еженедельно</option>
            <option value="monthly">Ежемесячно</option>
            <option value="yearly">Ежегодно</option>
            <option value="never">Никогда</option>
        </param>
    </params>

</mosinstall>
