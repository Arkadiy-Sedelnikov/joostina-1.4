<?xml version="1.0" encoding="utf-8"?>
<mosinstall type="module" version="1.0.0">
	<name>Главное меню</name>
	<author>Joostina! Project</author>
	<creationDate>Июнь 2008</creationDate>
	<copyright>(C) 2008-2010 Joostina team.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.htm GNU/GPL</license>
	<authorEmail>joostinacms@gmail.com</authorEmail>
	<authorUrl>www.joostina.ru</authorUrl>
	<version>1.0.0</version>
	<description>Отображение меню.</description>
	<files>
		<filename module="mod_mainmenu">mod_mainmenu.php</filename>
	</files>
	<params>
		<param name="class_sfx" type="text" default="" label="CSS-суффикс класса меню" description="Суффикс, используемый в классе CSS для объектов меню" />
		<param name="moduleclass_sfx" type="text" default="" label="CSS-суффикс класса модуля" description="Суффикс, который будет использован в описании класса (table.moduletable) таблицы стилей (CSS) модуля. Это позволяет использовать индивидуальный стиль модуля." />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="menutype" type="mos_menu" default="" label="Название меню" description="Название меню (по умолчанию - `mainmenu`)" />
		<param name="menu_style" type="list" default="vert_indent" label="Стиль меню" description="Стиль (вид) меню">
			<option value="vert_indent">Вертикально</option>
			<option value="horiz_flat">Горизонтально</option>
			<option value="list_flat">Плоский список</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="full_active_id" type="radio" default="0" label="Полная подсветка активных пунктов" description="Разрешает полную подсветку активных пунктов меню, включая `Ссылка - Пункт компонента` и `Ссылка - Url`, что может стать причиной несовместимости с XHTML, если более одной ссылки являются активными">
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="cache" type="radio" default="0" label="Разрешить кэширование" description="Выберите, кэшировать ли содержимое этого модуля">
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</param>
		<param name="menu_images" type="radio" default="0" label="Показывать значки меню" description="Выберите, использовать ли значки для объектов меню">
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</param>
		<param name="menu_images_align" type="radio" default="0" label="Расположение значков меню" description="Расположение значков меню">
			<option value="0">Слева</option>
			<option value="1">Справа</option>
		</param>
		<param name="expand_menu" type="radio" default="0" label="Развернутое меню" description="Развернутое меню с созданием всегда видимого подменю">
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</param>
		<param name="activate_parent" type="radio" default="0" label="Включение родителя" description="Установка id активации также для всех родительских меню в дереве">
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="indent_image" type="list" default="0" label="Изображение отступа" description="Выберите, какое изображение будет использоваться системой">
			<option value="0">Из шаблона</option>
			<option value="1">Joomla! default images</option>
			<option value="2">Использовать параметры ниже</option>
			<option value="3">Нет</option>
		</param>
		<param name="indent_image1" type="imagelist" directory="/images/M_images" default="" label="Изображение отступа 1" description="Изображение для первого подуровня" />
		<param name="indent_image2" type="imagelist" directory="/images/M_images" default="" label="Изображение отступа 2" description="Изображение для второго подуровня" />
		<param name="indent_image3" type="imagelist" directory="/images/M_images" default="" label="Изображение отступа 3" description="Изображение для третьего подуровня" />
		<param name="indent_image4" type="imagelist" directory="/images/M_images" default="" label="Изображение отступа 4" description="Изображение для четвертого подуровня" />
		<param name="indent_image5" type="imagelist" directory="/images/M_images" default="" label="Изображение отступа 5" description="Изображение для пятого подуровня" />
		<param name="indent_image6" type="imagelist" directory="/images/M_images" default="" label="Изображение отступа 6" description="Изображение для шестого подуровня" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="spacer" type="text" default="" size="5" label="Разделитель" description="Разделитель горизонтального меню" />
		<param name="end_spacer" type="text" default="" size="5" label="Разделитель по концам" description="Разделитель по концам горизонтального меню" />
	</params>
</mosinstall>
